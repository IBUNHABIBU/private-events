 
 <div class="event-form">
 
 <%= form_for (@events) do |f| %>
  <%= render 'shared/error_messages', object:@events %>
  <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
 </div>
 <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description %>
</div>
   <div class="form-group">
      <%= f.label :date %>
      <%= f.datetime_select :date %>
   </div>   
      <div class="form-group">
      <%= f.label :location %>
      <%= f.text_field :location %>
    </div>
      <%= f.submit "Create Event", class: "btn btn-primary" %>
<% end %>
</div>

