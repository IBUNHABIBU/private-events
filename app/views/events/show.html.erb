
            <h1><%= @event.title %></h1>
            <p> Created by <%= @event.creator.name %></p>
            <br>
                <%= @event.description %>
                <%= @event.date %>
                <% if log_in(@event.creator) && @event.date > DateTime.now %>
                    <%= link_to "Invite", invite_path(eventid: @event.id) , class: "btn btn-primary w-25 float-right" %>
                <%end%>
        <h2>Attendees</h2>
        <%if @attendees.empty? %>
            <h3 class="text-center">There is no attendees</h3>     
        <%else%>
            <% @attendees.each do |attendee|%>
                <hr>
                <h5><%=attendee.name%></h5>
            <%end%>
        <%end%>
 